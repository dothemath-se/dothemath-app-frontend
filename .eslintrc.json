{
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": [
    "prettier",
    "jsx-a11y"
  ],
  "extends": [
    "react-app",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/strict"
  ],
  "rules": {
    "prettier/prettier": [
      "warn"
    ]
  },
  "overrides": [
    {
      "files": [
        "src/**/*.stories.*"
      ],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    }
  ]
}
